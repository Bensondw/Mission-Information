@{
    ViewBag.Title = "Contact";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Encyclopedia Missionium", "Index", "Home")</li>
    <li class="active">Contact</li>
</ol>

<h2>@ViewBag.Title</h2>
<h4>@ViewBag.Message</h4>

<div class="row">
    <div class="col-md-12">
        <address>
            45 S Main<br />
            Seattle, WA 98112<br />
            <abbr title="Phone">P:</abbr>
            253.555.0100
        </address>
    </div>
    <br />

    <address>
        <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@encyclopediaM.com</a><br />

    </address>
</div>



<!--Contact Form below-->

<div class="row">

    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label for="userName">User Name</label>
                <input type="text" class="form-control" id="exampleInputUserName1" placeholder="User Name">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>


            <div>
                <select id="subject" name="subject" class="form-control" required="required">
                    <option value="na">Subject</option>
                    <option value="question">Question</option>
                    <option value="suggestion">Suggestion</option>
                    <option value="thought">Thought</option>
                </select>
            </div>
            <br />

            <div>
                <textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required" placeholder="Message"></textarea>
            </div>
            <br />

            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

</div>

